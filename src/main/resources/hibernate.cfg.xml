<!DOCTYPE hibernate-configuration PUBLIC 
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521/XEPDB1</property>
    <property name="hibernate.connection.username">sys</property>
    <property name="hibernate.connection.password">sys</property>
    <property name="hibernate.show_sql">false</property>
    <property name="hibernate.hbm2ddl.auto">none</property>
    <property name="hibernate.connection.internal_logon">SYSDBA</property>
    
    <mapping class="com.cpi.is.entity.UserEntity" />
    <mapping class="com.cpi.is.entity.BranchEntity" />
    <mapping class="com.cpi.is.entity.RawMaterialListEntity" />
    <mapping class="com.cpi.is.entity.DppEntity" />
    <mapping class="com.cpi.is.entity.ProductionMaterialEntity" />
    <mapping class="com.cpi.is.entity.DispatchTypeEntity" />
    <mapping class="com.cpi.is.entity.BranchEntity" />
    <mapping class="com.cpi.is.entity.SkuEntity" />
    <mapping class="com.cpi.is.entity.RawMaterialEntity" />  
    <mapping class="com.cpi.is.entity.DispatchingEntity" />
    <mapping class="com.cpi.is.entity.FinishedProductListEntity" />
  </session-factory>
</hibernate-configuration>